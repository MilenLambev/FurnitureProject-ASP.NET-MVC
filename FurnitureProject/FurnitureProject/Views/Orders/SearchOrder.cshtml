@model OrdersSearchOrderVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <tr>
        <td>
            MOL
        </td>
        <td>
            Order Date
        </td>
    </tr>

    <tr>
        <td>
            @Model.Order.Customer.MOL
        </td>
        <td>
            @Model.Order.Order.Date
        </td>
        <td></td>
    </tr>
    <tr>
        <td colspan="3">
            <center>
                <p style="font-size: 2em">Ordered items</p>
            </center>
        </td>
    </tr>
    <tr>
        <td>
            <b>Item name</b>
        </td>
        <td>
            <b>Item price</b>
        </td>
        <td>
            <b>Item weight</b>
        </td>
        <td>
            <b>Quantity</b>
        </td>
    </tr>
@foreach(var item in Model.Order.Products)
{
    <tr>
        <td>@item.Product.Name</td>
        <td>@item.Product.Price</td>
        <td>@item.Product.Weight</td>
        <td>@item.Quantity</td>
    </tr>
}
</table>